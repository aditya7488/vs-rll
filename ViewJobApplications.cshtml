@model List<JobPortal.Models.JobApplication>

<h2>Applications for Job</h2>

@if (!Model.Any())
{
    <p>No applications found for this job posting.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
              
                <th>Applied Date</th>
                
                <th>Resume</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    @* <td>@application.</td>
                    <td>@application.Email</td> *@
                    <td>@application.AppliedDate.ToShortDateString()</td>
                    @* <td>@application.Status</td> *@
                    <td>
                        @if (!string.IsNullOrEmpty(application.Resume))
                        {
                            <a href="@Url.Action("DownloadResume", "JobApplication", new { applicationId = application.ApplicationId })">Download</a>
                        }
                        else
                        {
                            <span>No resume submitted</span>
                        }
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
