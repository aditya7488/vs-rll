@model JobServicePortal.Models.ApplicantRegistration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        body {
           
            background-size: cover;
            color: white;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
        }

        form div {
            margin-bottom: 15px;
        }

        label {
            display: inline-block;
            width: 150px;
        }

        input {
            width: calc(100% - 160px);
        }
    </style>
</head>
<body>
    <div class="container">
        <form method="post">
            <b><label>Enter Username</label></b>
            <input type="text" name="t" class="form-control" style="background-color: aliceblue;" /><br />

            <b><label>Enter Old Password</label></b>
            <input type="password" name="oldPassword" class="form-control" style="background-color: aliceblue;" /><br />

            <b><label>Enter New Password</label></b>
            <input type="password" name="newPassword" class="form-control" style="background-color: aliceblue;" /><br />

            <b><label>Enter Confirm Password</label></b>
            <input type="password" name="conPassword" class="form-control" style="background-color: aliceblue;" /><br />

            <b><input type="submit" value="Reset" class="btn btn-info" style="align-content: center;" /></b>
        </form>
    </div>
</body>
</html>

<div>
    @ViewData["x"]
</div>