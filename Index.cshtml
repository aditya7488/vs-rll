@model IEnumerable<JobPortalApp1.Models.JobApplicant> // Use the appropriate model for job seekers

@{
    ViewBag.Title = "AdminDashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h2>Admin Dashboard</h2>

        <h3>Manage Job Seekers</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Job Seeker ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.JobApplicants != null && ViewBag.JobApplicants.Any())
                {
                    foreach (var seeker in ViewBag.JobApplicants)
                    {
                        <tr>
                            <td>@seeker.AdminId</td>
                            <td>@seeker.Name</td>
                            <td>@seeker.Email</td>
                            <td>
                                <a asp-action="ViewJobSeeker" asp-route-id="@seeker.Id" class="btn btn-info btn-sm">View</a>
                                <a asp-action="EditJobSeeker" asp-route-id="@seeker.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="DeleteJobSeeker" asp-route-id="@seeker.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No job seekers found.</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Manage Employers</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Employer ID</th>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Employers != null && ViewBag.Employers.Any())
                {
                    foreach (var employer in ViewBag.Employers)
                    {
                        <tr>
                            <td>@employer.Id</td>
                            <td>@employer.Name</td>
                            <td>@employer.Email</td>
                            <td>
                                <a asp-action="ViewEmployer" asp-route-id="@employer.Id" class="btn btn-info btn-sm">View</a>
                                <a asp-action="EditEmployer" asp-route-id="@employer.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="DeleteEmployer" asp-route-id="@employer.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No employers found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
